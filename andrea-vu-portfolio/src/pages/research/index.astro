---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import { getCollection } from 'astro:content';

const research = (await getCollection('research')).sort((a, b) => (a.data.order || 999) - (b.data.order || 999));
---

<Layout title="Research - Andrea Vu">
  <Navigation />

  <main class="min-h-screen bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20 lg:py-24">
      <!-- Header -->
      <div class="mb-16">
        <h1 class="text-5xl sm:text-6xl font-extrabold mb-6 text-gray-900 leading-tight">Research</h1>
        <p class="text-xl sm:text-2xl text-gray-600 leading-relaxed max-w-3xl">
          My research focuses on hardware design, controls, and unconventional actuation systems.
        </p>
      </div>

      <!-- Research Grid -->
      <div class="space-y-12 lg:space-y-16">
        {research.map((item) => (
          <article class="group">
            <a href={`/research/${item.slug}`} class="block">
              <div class="grid lg:grid-cols-[400px_1fr] gap-8 lg:gap-12 bg-white border border-gray-200 rounded-2xl p-6 lg:p-8 hover:border-green-200 hover:shadow-lg hover:bg-green-50/30 transition-all duration-300">
                {item.data.image && (
                  <div class="overflow-hidden rounded-xl bg-gray-100 h-64 lg:h-auto">
                    <img
                      src={item.data.image}
                      alt={item.data.title}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    />
                  </div>
                )}

                <div class="flex flex-col justify-center space-y-4">
                  <div>
                    <h2 class="text-3xl lg:text-4xl font-bold mb-3 text-gray-900 group-hover:text-green-600 transition-colors leading-tight">
                      {item.data.title}
                    </h2>

                    <div class="space-y-2 mb-4">
                      <p class="text-sm font-medium text-gray-500">
                        {item.data.startDate} - {item.data.endDate || 'Present'}
                      </p>

                      <p class="text-sm font-medium text-gray-700">
                        Research Advisor: {item.data.advisor}
                      </p>
                    </div>
                  </div>

                  <p class="text-gray-700 text-base leading-relaxed">
                    <span class="font-semibold">Research Area:</span> {item.data.area}
                  </p>

                  {item.data.publications && item.data.publications.length > 0 && (
                    <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-50 rounded-lg w-fit">
                      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                      <span class="text-sm font-medium text-green-700">
                        {item.data.publications.length} publication{item.data.publications.length > 1 ? 's' : ''}
                      </span>
                    </div>
                  )}

                  <div class="pt-2">
                    <span class="inline-flex items-center text-gray-900 font-semibold group-hover:gap-2 transition-all">
                      View Research
                      <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </main>
</Layout>
